datasource db {
  provider = "mysql" // 数据库类型
  url      = env("DATABASE_URL") // 数据库连接地址 文件为 .env
}

generator client {
  provider = "prisma-client-js" // 生成的文件类型
}

model Post {
  id        Int     @id @default(autoincrement()) // id 主键 自增 
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id]) // fields: 本表字段, references: 关联表字段
  authorId  Int?
}

// autoincrement 主键自增
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique // 唯一
  name  String? // 可空
  posts Post[]
}
